
@{
    ViewBag.Title = "SendVerificationLinkEmail";
}

<h2>SendVerificationLinkEmail</h2>
@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong>Your account has been successfully activated.Click here to login @*@Html.ActionLink("Login", "Login", "user")*@

            <div>

                <a href="~/user/Login" type="submit" value="Login" class="btn-info">Login</a>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-danger">
        <strong>Error!</strong>@ViewBag.Message
    </div>
}